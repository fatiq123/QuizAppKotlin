<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QuizApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/your_custom_primary_color</item>
        <item name="colorPrimaryVariant">@color/your_custom_primary_variant_color</item>
    </style>

    <style name="Theme.QuizApp" parent="Base.Theme.QuizApp" />



    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
    </style>

    
    
    <style name="Theme.QuizApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>




    <!--Custom theme for quizes-->
    <style name="QuizTheme" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


    </style>




    <color name="your_custom_primary_color">#0F68D3</color>
    <color name="your_custom_primary_variant_color">#253DC5</color>
</resources>